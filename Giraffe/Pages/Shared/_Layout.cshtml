<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Giraffe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Giraffe.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header-section ">
        <div class="container-fluid container">
            <div class="d-flex justify-content-between align-items-center pt-5">
                <div class="header-left">
                    <a class="navbar-brand" href="/Index">
                        <img src="/img/logo.png" alt="Giraffe" width="150">
                    </a>
                </div>
                <div class="header-right d-flex align-items-center">
                    <nav class="nav">
                        <a class="nav-link text-white" href="#">Главная</a>
                        <a class="nav-link text-white" href="#">О нас</a>
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Услуги
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Шелкография</a></li>
                                <li><a class="dropdown-item" href="#">ДТФ</a></li>
                                <li><a class="dropdown-item" href="#">Плоттерная резка</a></li>
                                <li><a class="dropdown-item" href="#">Puff-Print</a></li>
                            </ul>
                        </div>
                        <a class="nav-link text-white" href="#">Контакты</a>
                    </nav>
                    <a class="text-white ContactUs" href="#">Связаться с нами</a>
                </div>
            </div>
        </div>
        <div class="text-center">
            <h1 class="text-center heading">Студия шелкографии</h1>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="">
        <div class="container footer-text">
            <a class="navbar-brand" href="/Index">
                <img src="/img/logo.png" alt="Giraffe" width="150">
            </a>
            <a class="nav-link text-white" href="#">О нас</a>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Услуги
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#">Шелкография</a></li>
                    <li><a class="dropdown-item" href="#">ДТФ</a></li>
                    <li><a class="dropdown-item" href="#">Плоттерная резка</a></li>
                    <li><a class="dropdown-item" href="#">Puff-Print</a></li>
                </ul>
            </div>
            <a class="nav-link text-white" href="#">Контакты</a>
            <div class="socialMedia">
                <a href=""><img src="/img/instagram.png" alt="instagram"></a>
                <a href=""><img src="/img/email.png" alt="email"></a>
                <a href=""><img src="/img/telegram.png" alt="telegram"></a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>